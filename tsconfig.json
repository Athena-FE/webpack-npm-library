{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2015",
    "lib": ["DOM","DOM.Iterable","ES2015"],
    "strict": true,
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "outDir": "dist/types"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/main.tsx"
  ]
}